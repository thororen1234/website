---
import type { Skill } from '@/types'

interface Props extends Skill {}

const { text, description, progress } = Astro.props

const progressStyle = `width: ${progress}%;`
---

<div class="flex flex-col gap-1">
    <span class="font-medium text-neutral-800 dark:text-neutral-200">
        {text}
    </span>

    <p class="text-xs text-neutral-500 dark:text-neutral-400">{description}</p>

    <div class="h-6 w-full rounded-lg bg-zinc-400 dark:bg-zinc-950">
        <div
            style={progressStyle}
            class="h-full rounded-lg bg-gradient-to-r from-rose-800 to-rose-500"
        >
        </div>
    </div>
</div>
