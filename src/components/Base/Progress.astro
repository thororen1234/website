---
interface Props {
    text: string
    percentage: number // 0 - 100
}

const { text, percentage } = Astro.props

const style = `width: ${percentage}%;`
---

<div class="flex flex-col gap-2">
    <p class="font-medium text-neutral-200">{text}</p>
    <div class="h-2 w-full rounded-full bg-neutral-950">
        <div style={style} class="h-full rounded-full bg-indigo-300"></div>
    </div>
</div>
