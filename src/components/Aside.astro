---
import { Information, Socials } from '@/consts'
import { UserCircle, BookMarked } from '@lucide/astro'

import Avatar from '@/components/Base/Avatar.astro'
import Box from '@/components/Base/Box.astro'
---

<div class="flex w-full flex-col items-center gap-3 md:max-w-[240px]">
    <Avatar size={240} />

    <div class="flex w-full flex-col gap-3">
        <span
            class="inline-flex items-center gap-1 text-sm font-medium text-neutral-600 dark:text-neutral-400"
        >
            <UserCircle size="18" fill="#ffffff10" /> About
        </span>

        <Box>
            {
                Information.map((info) => (
                    <span class="flex items-center gap-1 font-medium text-neutral-700 dark:text-neutral-200">
                        <info.icon size="18" fill="#ffffff10" />
                        {info.text}
                    </span>
                ))
            }
        </Box>

        <span
            class="inline-flex items-center gap-1 text-sm font-medium text-neutral-600 dark:text-neutral-400"
        >
            <BookMarked size="18" fill="#ffffff10" /> Socials
        </span>

        <Box>
            {
                Socials.map((social) => (
                    <a
                        href={social.url}
                        target="_blank"
                        class="flex items-center gap-1 font-medium text-neutral-700 transition-colors hover:text-indigo-500 dark:text-neutral-200"
                    >
                        <social.icon size="18" fill="#ffffff10" />
                        {social.text}
                    </a>
                ))
            }
        </Box>
    </div>
</div>
