---
import Layout from '../layouts/Layout.astro'
import { Friends, Contributions, Skills, Socials, Projects } from '@/consts'
import { UserCircle, Users, Highlighter, Notebook, Star } from '@lucide/astro'

import Box from '@/components/Base/Box.astro'
import SkillCard from '@/components/SkillCard.astro'
import ProjectCard from '@/components/ProjectCard.astro'
import Card from '@/components/Card.astro'
---

<Layout>
    <!-- Me -->
    <span
        class="flex items-center gap-1 text-sm font-medium text-neutral-600 dark:text-neutral-400"
    >
        <Highlighter size="18" fill="#ffffff10" /> Me
    </span>

    <Box>
        Hi! I'm Thor! I'm a software developer from the United States of
        America with experience in languages such as TypeScript,
        JavaScript, Python, and Go.
    </Box>

    <!-- Skills -->
    <span
        class="flex items-center gap-1 text-sm font-medium text-neutral-600 dark:text-neutral-400"
    >
        <Star size="18" fill="#ffffff10" /> Skills
    </span>

    <Box>
        {Skills.map((skill) => <SkillCard {...skill} />)}
    </Box>

    <!-- Projects -->
    <span
        class="flex items-center gap-1 text-sm font-medium text-neutral-600 dark:text-neutral-400"
    >
        <Notebook size="18" fill="#ffffff10" /> Projects
    </span>

    <div class="flex flex-wrap gap-3">
        {Projects.map((project) => <ProjectCard {...project} />)}
    </div>
</Layout>